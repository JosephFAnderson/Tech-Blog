<section>
    <div class="post-container">
        <header class="post-head">
             <p class="post-title">{{post.title}}</p>
            <p class ="username">Posted by {{post.user.username}} on {{post.created_at}}</p>
        </header>
        <article class="post-content">{{post.content}}</article>
    </div>
    {{#each post.comments as |comment|}}
    <div class="post-container">
        <header class="comment-head"></header>
        <div class="post-content">
            <p>{{comment.content}}</p>
            <p>-{{comment.user.username}}, {{comment.created_at}}</p>
        </div>
    </div>
    {{/each}}
    <div class="post-container">
        <header class="comment-head"></header>
        <div class="comment-content">
            <p>Comment</p>
            <textarea class="commentText"></textarea>
           <button data-id="{{post.id}}" class="newComment">Submit</button>
        </div>
    </div>
</section>
<script src="/js/post.js"></script>